@model RugbyTeamsEFMVC.Models.Team

@{
    ViewBag.Title = "Edit Team";
}

<form class="mt-3" method="post" asp-controller="Team" asp-action="EditTeam">
    <input hidden asp-for="Id" />
@*     <partial name="_TeamFormFields" model="Model" />
 *@
    <div class="form-group">
        <label asp-for="Name">@Html.DisplayNameFor(model => model.Name) </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City">@Html.DisplayNameFor(model => model.City) </label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div><div class="form-group">
        <label asp-for="State">@Html.DisplayNameFor(model => model.State) </label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>