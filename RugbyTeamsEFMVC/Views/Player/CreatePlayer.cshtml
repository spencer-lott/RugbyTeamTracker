@model RugbyTeamsEFMVC.ViewModels.PlayerViewModel

@{
    ViewBag.Title = "Create Player";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p><h1>Add new Player</h1></p>
        <form method="post" asp-controller="Player" asp-action="CreatePlayer">
            <div class="row text">
                <div class="col-md-8 offset-2">
                    <div class="form-group mb-3">
                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Notes" class="control-label"></label>
                            <input asp-for="Notes" class="form-control" />
@*                             <span asp-validation-for="Notes" class="text-danger"></span>
 *@                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label asp-for="TeamId" class="control-label">Team</label>
                                <select asp-for="TeamId" asp-items="ViewBag.Teams" class="form-select"></select>
                                <span asp-validation-for="TeamId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Position" class="control-label">Position</label>
                                <select asp-for="Position" asp-items="ViewBag.Positions" class="form-select">
                                    <option value="">Select a position</option>
                                </select>
    @*                             <span asp-validation-for="Position" class="text-danger"></span>
 *@                         </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label asp-for="HeightFt" class="control-label"></label>
                                <input asp-for="HeightFt" class="form-control" />
                                <span asp-validation-for="HeightFt" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="HeightIn" class="control-label"></label>
                                <input asp-for="HeightIn" class="form-control" />
                                <span asp-validation-for="HeightIn" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group col-md-5 mb-3">
                            <label asp-for="Weight" class="control-label"></label>
                            <input asp-for="Weight" class="form-control" />
                            <span asp-validation-for="Weight" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-outline-success float-end">Submit</button>
                            @*<input type=submit" value="Submit" class="btn btn-outline-success float-end">*@
                            <a asp-controller="Player" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>