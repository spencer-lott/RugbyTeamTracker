@model IEnumerable<Player>
@{
    ViewBag.Title = "Players";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p><h1>Players</h1></p>
        <a class="text-white btn btn-primary mt-3" asp-controller="Player" asp-action="CreatePlayer">Add New Player</a>
        <table class="table">
            <tr>
                <th>Full Name</th>
                <th>Notes</th>
                <th>Position</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            @foreach (var player in Model)
            {
                <tr>
                    <td>@player.FullName</td>
                    <td>@player.Notes</td>
                    <td>@player.Position</td>
                    <td>@player.CompleteHeight</td>
                    <td>@player.Weight lbs.</td>
                    <td><a class="text-white btn btn-dark" asp-controller="Player" asp-action="EditPlayer" asp-route-id="@player.Id">Edit</a>
                    </td>
                    <td><a class="text-white btn btn-danger" asp-controller="Player" asp-action="DeletePlayer" asp-route-id="@player.Id">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>